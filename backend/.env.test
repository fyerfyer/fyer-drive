# Server
PORT=5000
NODE_ENV=test

# MongoDB init credentials used by the mongo service
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123

# Database connection used by the test (connects to test MongoDB)
# directConnection=true is required when connecting to a single replica set member
MONGODB_URI=mongodb://localhost:27018/gdrive-test?directConnection=true

# Security
JWT_SECRET=test_jwt_secret
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Clear trash settings
TRASH_RETENTION_DAYS=30

# MinIO / object storage (test configuration)
MINIO_ROOT_USER=testminio
MINIO_ROOT_PASSWORD=testminio123
MINIO_ACCESS_KEY=testminio
MINIO_SECRET_KEY=testminio123
MINIO_ENDPOINT=http://localhost:9012
MINIO_PORT=9012
MINIO_PUBLIC_URL=http://localhost:9012

# Redis config 
REDIS_URL=redis://localhost:6379

# Socket io config 
FRONTEND_URL=http://localhost:5173