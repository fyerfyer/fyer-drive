# Server
PORT=5000
NODE_ENV=development

# MongoDB init credentials (used by docker-compose.yml to initialize MongoDB)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123

# Database connection
# For Docker container: use 'mongo' as host
# For local development: use 'localhost' as host
# directConnection=true is required when connecting to a single replica set member
MONGODB_URI=mongodb://admin:password123@mongo:27017/gdrive?authSource=admin&directConnection=true

# Security
JWT_SECRET=change_this_jwt_secret
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Clear trash settings
TRASH_RETENTION_DAYS=30

# MinIO / object storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_ENDPOINT=http://minio:9000
MINIO_PUBLIC_URL=http://localhost:9000