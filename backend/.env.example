# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB init credentials (used by docker-compose.yml to initialize MongoDB)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123

# Database
# For Docker container: use 'mongo' as host, with authentication
# For local development: use 'localhost' as host
# directConnection=true is required when connecting to a single replica set member
# With authentication:
MONGODB_URI=mongodb://admin:password123@localhost:27017/mern-drive?authSource=admin&directConnection=true
# Without authentication (for simple local setup):
# MONGODB_URI=mongodb://localhost:27017/mern-drive?directConnection=true

# JWT Authentication
JWT_SECRET=change_this_to_a_random_secret_key
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# File Management
TRASH_RETENTION_DAYS=30

# MinIO Object Storage
# MINIO_ROOT_USER/PASSWORD: Used to initialize MinIO service (in docker-compose.yml)
# MINIO_ACCESS_KEY/SECRET_KEY: Used by the app to connect to MinIO
# For local development: use 'localhost' as MINIO_ENDPOINT
# For Docker container: use 'minio' as MINIO_ENDPOINT
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=http://localhost:9000